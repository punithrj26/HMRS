<section class="container">
  <article class="row">
    <div class="col-3 bg-light text-center my-2">
      {{#if user}}
      <span class="editIcon">
        <a href="/employee/edit-emp/{{payload._id}}"><img
            src="https://cdn-icons.flaticon.com/png/512/5996/premium/5996831.png?token=exp=1644257383~hmac=f3799ea29e8c59ecde0e874fd28eea46"
            alt=""
            title="edit profile"
          /></a>
      </span>
      {{else}}
      {{/if}}
      <figure class="my-2 p-2">
        <img
          class="img-thumbnail p-1"
          src="{{trimString payload.emp_photo.0.path}}"
          alt="{{payload.emp_name}}"
        />
      </figure>
      <h2
        class="h2 text-uppercase font-weight-bold text-primary p-2"
      >{{payload.emp_name}}</h2>
      <p class="lead">{{payload.emp_email}}</p>
    </div>

    <div class="col-9 bg-white my-2 p-2 container-fluid">
      <main>
        <h2
          class="text-uppercase border-bottom font-weight-bold text-dark p-2 container-fluid ml-2"
        >{{payload.emp_name}}</h2>
        {{#if user}}
        <form
          class="float-right text-danger"
          method="post"
          action="/employee/delete-emp/{{payload._id}}?_method=DELETE">
          <input type="hidden" name="_method" value="DELETE" />
          <button class="btn btn-danger">Delete</button>
        </form>
        {{else}}
        {{/if}}
        <div class="container-fluid">
          <p class="lead p-1">ID : {{payload.emp_id}}</p>
          <p class="lead p-1">Gender : {{payload.emp_gender}}</p>
          <p class="lead p-1">Education : {{payload.emp_edu}}</p>
          <p class="lead p-1">Location : {{payload.emp_location}}</p>
          <p class="lead p-1">Salary : {{payload.emp_salary}}</p>
          <p class="lead p-1">Skills : {{payload.emp_skills}}</p>
          <p class="lead p-1">Salary : {{payload.emp_phone}}</p>
          <p class="lead p-1">Experience : {{payload.emp_exp}}</p>
        </div>
      </main>
    </div>
  </article>
</section>